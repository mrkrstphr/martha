        "psr/log": "~1.0",
        "symfony/yaml": "2.3.*",
        "zendframework/zendframework": "2.2.*",
        "doctrine/orm": "2.*",
        "doctrine/doctrine-module": "0.8.0-beta1",
        "doctrine/doctrine-orm-module": "0.8.0-beta3",
        "chrisboulton/php-resque": "~1.2",
        "robmorgan/phinx": "~0.3",
        "symfony/http-foundation": "~2.5"
    }
