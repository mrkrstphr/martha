{
    "name": "martha-ci/martha",
    "description": "Martha Continuous Integration System",
    "type": "project",
    "keywords": ["continuous integration", "build server", "builds"],
    "homepage": "http://github.com/martha-ci",
    "license": "MIT",
    "authors": [
        {
            "name": "Kristopher Wilson",
            "email": "kristopherwilson@gmail.com",
            "homepage": "http://kristopherwilson.com",
